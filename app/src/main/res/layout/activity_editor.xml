<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CatalogActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageViewEditId"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="8dp"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/image_placeholder"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose an image"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/chooseImageButtonId"
            app:layout_constraintEnd_toStartOf="@+id/chooseImageButtonId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/chooseImageButtonId" />

        <Button
            android:id="@+id/chooseImageButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Choose"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewEditId" />

        <EditText
            android:id="@+id/titleEditTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Title"
            android:minWidth="150dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chooseImageButtonId" />

        <Spinner
            android:id="@+id/spinnerEditId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@+id/priceEditTextId"
            app:layout_constraintEnd_toStartOf="@+id/priceEditTextId"
            app:layout_constraintTop_toTopOf="@+id/priceEditTextId" />

        <EditText
            android:id="@+id/priceEditTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Price"
            android:inputType="number"
            android:minWidth="100dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/titleEditTextId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/titleEditTextId" />

        <EditText
            android:id="@+id/quantityEditTextId"
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleEditTextId"
            android:hint="Quantity" />

        <EditText
            android:id="@+id/locationEditTextId"
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quantityEditTextId"
            android:hint="Location" />

        <EditText
            android:id="@+id/descriptionEditTextId"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Description"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationEditTextId" />

        <EditText
            android:id="@+id/supplierEditTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Supplier"
            android:minWidth="100dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/quantityEditTextId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/quantityEditTextId" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>